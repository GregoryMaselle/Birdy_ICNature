<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteSpotting"
    android:background="@drawable/backgroundhome">

    <include
        android:id="@+id/include"
        layout="@layout/activity_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteAllBtn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/include"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/delete_all_border"
        android:fontFamily="@font/abel"
        android:text="@string/delete_all_btn"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/spottings_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/deleteAllBtn"
        android:layout_marginTop="20dp" />

</RelativeLayout>